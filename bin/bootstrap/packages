#!/bin/bash
set -e

# arch-specific setup
if [[ -e /etc/arch-release ]]; then
	pacman="sudo pacman --noconfirm"
	# enable multilib repositories (for steam)
	sudo sed -E '/^#\[multilib\]/{s/^#//;n;s/^#//}' -i /etc/pacman.conf
	$pacman -Sy

	# update mirrors
	$pacman -S reflector
	sudo reflector --protocol https --age 1 --number 5 --sort rate --save /etc/pacman.d/mirrorlist

	# install yay aur package manager
	$pacman -S base-devel
	git clone https://aur.archlinux.org/yay.git "$HOME/yay"
	pushd "$HOME/yay"
	makepkg -si
	popd
	rm -r "$HOME/yay"

	# install the rest of the packages
	"$HOME/.config/bin/strip-comments" "$HOME/.config/package.list" | yay -S --noconfirm -
fi
