# compatible with all shells
# sourced by each *rc
# for setting to constants
# compare with .profile:
#   which modifies
#   and starts services
#   at login
#
export TERM="xterm-256color"
export XDG_CONFIG_HOME="$HOME/.config"
export EDITOR="vim"
export PAGER="less"

# Aliases
alias ls="ls --color=tty --group-directories-first --hide='*.pyc'"
alias lsblk="lsblk --output NAME,SIZE,LABEL,FSTYPE,UUID"
alias gitignore="git-ignore"
alias nw="urxvt &"
alias waifu2x="waifu2x-converter-cpp"
alias fucking=sudo

# Functions
for file in $HOME/.config/shell_functions/*; do
	source "$file"
done
