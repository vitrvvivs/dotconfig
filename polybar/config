[colors]
background = 	${xrdb:background}
background-alt =${xrdb:color18}
foreground = 	${xrdb:foreground}
foreground-alt =${xrdb:color19}
red = 		${xrdb:color1}
green = 	${xrdb:color2}
yellow = 	${xrdb:color3}
blue = 		${xrdb:color4}
purple =	${xrdb:color5}
cyan =		${xrdb:color6}
black =		${xrdb:color0}
grey0 =		${xrdb:color18}
grey1 =		${xrdb:color19}
grey2 =		${xrdb:color20}
grey3 =		${xrdb:color21}
white =		${xrdb:color15}

ok =		${self.green}
warn =		${self.yellow}
alert =		${self.red}
info =		${self.blue}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/topbar]
monitor = ${env:MONITOR:LVDS-1}
width = ${env:WIDTH:100%}
height = ${env:HEIGHT:20}
offset-x = ${env:PADDING:0}
offset-y = ${env:PADDING:0}

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
underline-size = 0

border-size = 0

padding-left = 0
padding-right = 1
module-margin = 0.5

font-0 = InconsolataGo Nerd Font Mono:pixelsize=12;2
font-1 = WenQuanYi Micro Hei Mono:pixelsize=9;1

modules-left = bspwm
modules-center = mpd
modules-right = nettotal eth wlan volume memory battery date

tray-position = right
tray-padding = 2

wm-restack = bspwm

[bar/offbar]
inherit = bar/topbar

modules-left = bspwm
modules-center =
modules-right = date


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %{F#55}%{F-} %layout%
label-layout-underline = ${colors.secondary}
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 60
mount-0 = /
mount-1 = /home
label-mounted = %mountpoint%: %percentage_free%%
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
format = <label-state>

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.grey0}
label-empty-padding = 1

label-dimmed = %name%
label-dimmed-background = ${colors.background}
label-dimmed-padding = 1

label-focused = %name%
label-focused-background = ${colors.grey1}
label-focused-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.warn}
label-urgent-padding = 1

[module/mpd]
type = internal/mpd

;format-online = <label-song> <icon-prev> <toggle> <icon-next> <icon-repeat> <icon-random>
;format-online = <label-song> <icon-music> <label-album>
format-online = <label-song>

label-song = "%title%  %album%"
label-album = %album%"
label-song-maxlen = 200
label-song-ellipsis = False

icon-music = 
icon-prev = 
icon-seekb = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = │
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
;format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.purple}
label = %mb_used:0:5% MB

[module/wlan]
type = internal/network
interface = ${env:WLAN:wlp3s0}
interval = 5.0
ping-interval = 0

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.cyan}

label-connected = %essid%
format-packetloss = <label-connected>
format-packetloss-prefix = " "
format-packetloss-prefix-foreground = ${colors.alert}

[module/eth]
type = internal/network
interface = ${env:ETH:enp0s25}
interval = 5.0

format-connected-format = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.cyan}

label-connected = %local_ip%

[module/nettotal]
type = custom/script
exec = $NETTOTAL_SCRIPT -fc -p 2 -u Mb -T 1 -t '{ ,downspeed,}{,downunit,/s }{,downloss,% }{ ,upspeed,}{,upunit,/s }{,uploss,%}'
tail = true

[module/date]
type = internal/date
interval = 1

date = "%Y-%m-%d"
time = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/volume]
type = internal/volume
mapping = true

format-volume = <label-volume>
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.yellow}
label-volume = "%percentage%%"

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = " " 

bar-volume-width = 33
bar-volume-foreground = ${colors.foreground}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
adapter = ADP0
battery = BAT0
full-at = 95

label-charging = %percentage%
format-charging = " <animation-charging> <label-charging>"
format-charging-prefix = " "

label-discharging = %percentage%
format-discharging = " <ramp-capacity> <label-discharging>"
format-discharging-prefix = " "

format-full = " "
format-full-foreground = ${colors.green}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.red}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.cyan}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70

format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.red}
format-foreground = ${colors.grey0}
format-warn-foreground = ${colors.warn}

label = %temperature%
label-warn-foreground = ${colors.warn}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-close = 
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

