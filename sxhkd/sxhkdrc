super + Return
	alacritty

# launcher
super + space
	rofi -show run

# sxhkd reload
super + Escape
	pkill -USR1 -x sxhkd

super + alt + Escape
	bspc quit

# restart display
super + F4
	xset dpms force off && xset dpms force on

## WINDOW

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + {z,x,c,v}
	bspc node -g {locked,sticky,private,hidden}

super + shift + v
	bspc node any.hidden -g hidden

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
super + Tab
	bspc node -f last

super + grave
	bspc desktop -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + shift + {h,j,k,l}
	bspc node '@focused:/' -f -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# rotate a tree
super + {_,shift} + r
	bspc node @parent -R {90, 270}

# toggle monacle
super + m
	bspc desktop -l next

#
# Function keys
#

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}3%
XF86{Next,Prev}_VMode
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}3%
ctrl + alt + {KP_Add,KP_Subtract}
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}3%

XF86Audio{Play,Prev,Next}
	mpc {toggle,prev,next}
ctrl + alt + {Down,Left,Right}
	mpc {toggle,prev,next}
